<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="QLCFPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- List all entity classes -->
        <class>com.example.coffeeretail.entity.Tables</class>
        <class>com.example.coffeeretail.entity.Customer</class>
        <class>com.example.coffeeretail.entity.Employee</class>
        <class>com.example.coffeeretail.entity.EmployeeDetail</class>
        <class>com.example.coffeeretail.entity.Account</class>
        <class>com.example.coffeeretail.entity.Product</class>
        <class>com.example.coffeeretail.entity.Order</class>
        <class>com.example.coffeeretail.entity.OrderDetail</class>
        <class>com.example.coffeeretail.entity.Category</class>

        <properties>
            <!-- JDBC connection settings for SQL Server -->
            <property name="jakarta.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=QLCF;encrypt=false"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="sapassword"/>

            <!-- Hibernate dialect for SQL Server -->
<!--            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>-->

            <!-- Auto-DDL (update schema) -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Show SQL in console -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>