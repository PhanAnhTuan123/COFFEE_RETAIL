<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
    <persistence-unit name="CafeNetworkSolutionPU">
        <class>com.example.cafenetworksolution.entities.Cafe</class>
        <class>com.example.cafenetworksolution.entities.Customer</class>
        <class>com.example.cafenetworksolution.entities.Employee</class>
        <class>com.example.cafenetworksolution.entities.MenuItem</class>
        <class>com.example.cafenetworksolution.entities.Order</class>
        <class>com.example.cafenetworksolution.entities.OrderItem</class>

        <properties>
            <!-- Driver và URL của cơ sở dữ liệu -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cafe_network"/>
            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value="sapassword"/>

            <!-- Các cấu hình Hibernate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>
